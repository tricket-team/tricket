{
  "name": "authentication-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/authentication-api/src",
  "targets": {
    "build": {
      "executor": "@jnxplus/nx-boot-maven:build",
      "outputs": ["packages/authentication-api/target"]
    },
    "build-image": {
      "executor": "@jnxplus/nx-boot-maven:build-image"
    },
    "serve": {
      "executor": "@jnxplus/nx-boot-maven:serve",
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ]
    },
    "lint": {
      "executor": "@jnxplus/nx-boot-maven:lint",
      "options": {
        "linter": "checkstyle"
      }
    },
    "test": {
      "executor": "@jnxplus/nx-boot-maven:test",
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ]
    }
  },
  "tags": ["backend"]
}
